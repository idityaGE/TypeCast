{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TypeCast",
  "version": "0.1.0",
  "identifier": "com.TypeCast.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "TypeCast",
        "label": "main",
        "width": 400,
        "height": 800,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "fullscreen": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "minimizable": false,
        "maximizable": false,
        "focus": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "longDescription": "TypeCast - KeyStroke visualizer",
    "publisher": "idityage",
    "shortDescription": "TypeCast - KeyStroke visualizer",
    "icon": [
      "icons/128x128.png",
      "icons/icon.png"
    ]
  }
}